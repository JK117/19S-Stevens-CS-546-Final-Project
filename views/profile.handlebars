{{#if user}}
<h2>{{user.userName}}</h2>
<h2>Profile:</h2>
<ul>
    <li>user_id: {{user._id}}</li>
    <li>username: {{user.userName}}</li>
    <li>firstName: {{user.firstName}}</li>
    <li>lastName: {{user.lastName}}</li>
    <li>email: {{user.email}}</li>
    {{#if user.staff}}
    <li>staff</li>
    {{else}}
    <li>customer</li>
    {{/if}}
</ul>
{{/if}}
<br>

<h2>Orders:</h2>
{{#if order}}
<ul>
    {{#each order}}
    <li>Order ID: {{_id}}</li>
    <li>Vehicle ID: {{vehicleId}}</li>
    <li>Vehicle Model: {{vehicleModel}}</li>
    <li>The site where the vehicle is picked up: {{from}}</li>
    <li>The site where the vehicle is dropped off: {{to}}</li>
    <li>The date when the vehicle is picked up: {{pickUpDate}}</li>
    <li>The date when the vehicle is dropped off: {{dropOffDate}}</li>
    <li>The total charge of the order: {{totalCharge}}</li>
    <br>
    {{/each}}
</ul>
{{else}}
<li>No order record.</li>
{{/if}}
<br>

<a href="/view/{{user.userName}}">Return to last page</a>